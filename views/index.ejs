<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>  <body>
    <%- include('partials/navbar.ejs') %> <div class="container">
        <div class="posts-list">
            <h2>All Blog Posts</h2>
            <% if (posts.length > 0) { %>
                <% posts.forEach(post => { %>
                    <div class="post-card">
                        <h3><a href="/posts/<%= post._id %>"><%= post.title %></a></h3>
                        <p class="author">By <%= post.author %> on <%= post.createdAt.toLocaleDateString() %></p>
                        <p><%= post.content.substring(0, 150) %>...</p>
                        <a href="/posts/<%= post._id %>" class="read-more">Read More</a>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No posts yet. <a href="/posts/new">Create one!</a></p>
            <% } %>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
</html>